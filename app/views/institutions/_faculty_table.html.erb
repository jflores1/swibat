<table class="faculty-table table">
	<thead>
		<tr>
			<th>Faculty Member</th>
			<th>Last Observation</th>
			<th>Next Observation</th>
			<th>Last Evaluation</th>
			<th>Next Evaluation</th>
			<th></th>

		</tr>
	</thead>
		<tbody>
		<% faculty.each do |faculty| %>
			<tr id="user_<%= faculty.id %>">
				<td><%= link_to "#{faculty.full_name}", user_path(faculty) %></td>
				<td>last observation date</td>
				<td>next obs date</td>
				<td>last evaluation date</td>
				<td>next eval date</td>
				<td>

					<div class="btn-group">
					  <a class="btn dropdown-toggle btn-monkey" data-toggle="dropdown" href="#">
					    <i class='icon-cloud-upload'></i> Add Observation
					    <span class="caret"></span>
					  </a>
					  <ul class="dropdown-menu">
					    <% @institution.evaluation_templates.published.each do |template| %>
					    	<li>
					    		<%= link_to template.name, eval_user_path(faculty, eval_type: "observation", template_id: template.id) %>
					    	</li>
					    <% end %>
					  </ul>
					</div>

					<span><%= link_to "<i class='icon-film'></i> Upload Video".html_safe, videos_user_path(faculty), class:"upload-video btn btn-monkey", data: {toggle: "tooltip", title: "Upload Videos"} %>
					</span>

					<div class="btn-group">
					  <a class="btn dropdown-toggle btn-monkey" data-toggle="dropdown" href="#">
					    <i class='icon-file-alt'></i> Add Evaluation
					    <span class="caret"></span>
					  </a>
					  <ul class="dropdown-menu">
					    <% @institution.evaluation_templates.published.each do |template| %>
					    	<li>
					    		<%= link_to template.name, eval_user_path(faculty, eval_type: "evaluation", template_id: template.id) %>
					    	</li>
					    <% end %>
					  </ul>
					</div>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>
