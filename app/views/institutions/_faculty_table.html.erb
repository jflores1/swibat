<div class="faculty-table">
	<div class="faculty-header">
			<h3><i class='icon-group'></i> Faculty </h3>
	</div>
	<table class="table table-striped table-bordered">
		<thead>
			<tr>
				<th>First Name</th>
				<th>Last Name</th>
				<th>Email Address</th>
				<th>Observations</th>
				<th></th>

			</tr>
		</thead>
			<tbody>
			<% faculty.each do |faculty| %>
				<tr id="user_<%= faculty.id %>">
					<td><%= link_to "#{faculty.first_name}", user_path(faculty) %></td>
					<td><%= link_to "#{faculty.last_name}", user_path(faculty) %></td>
					<td><%= link_to "#{faculty.email}", "#" %></td>
					<td><%= link_to "#{faculty.evaluations.count}", evaluations_user_path(faculty)  %></td>
					<td>

						<div class="btn-group">
						  <a class="btn btn-small dropdown-toggle btn-monkey" data-toggle="dropdown" href="#">
						    <i class='icon-laptop'></i> New Observation
						    <span class="caret white-caret"></span>
						  </a>
						  <ul class="dropdown-menu">
						  	<% if @institution.evaluation_templates.published.any? %>
						  		<% @institution.evaluation_templates.published.each do |template| %>
						    	<li>
						    		<%= link_to template.name, eval_user_path(faculty, eval_type: "observation", template_id: template.id) %>
						    	</li>
						    <% end %>
						  	<% else %>
						  		<li><%= link_to "Add Observation Template", institution_evaluation_templates_path(@institution) %>
						  		</li>
						  	<% end %>
						    
						  </ul>
						</div>				

						<div class="btn-group">
						  <a class="btn btn-small dropdown-toggle btn-monkey" data-toggle="dropdown" href="#">
						    <i class='icon-file-alt'></i> New Evaluation
						    <span class="caret white-caret"></span>
						  </a>
						  <ul class="dropdown-menu">
						  	<% if @institution.evaluation_templates.published.any? %>
							    <% @institution.evaluation_templates.published.each do |template| %>
							    	<li>
							    		<%= link_to template.name, eval_user_path(faculty, eval_type: "evaluation", template_id: template.id) %>
							    	</li>
							    <% end %>
							  <% else %>
							  	<li><%= link_to "Add Evaluation Template", institution_evaluation_templates_path(@institution) %>
						  		</li>
							  <% end %>
						  </ul>
						</div>

						<span><%= link_to "New Video <i class='icon-film'></i>".html_safe, videos_user_path(faculty), class:"upload-video btn btn-small btn-monkey", data: {toggle: "tooltip", title: "Upload Videos"} %>
						</span>
						
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
	<!-- TODO: Add sorting on this table. Maybe filtering -->
</div>