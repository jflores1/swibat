<li class="dropdown">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown">my courses <b class="caret gray-caret"></b></a>
  <ul class="dropdown-menu">
    <% if current_user.courses.count > 0 %>
        <% current_user.courses.each do |course| %>
            <li><%= link_to "#{course.course_name}", course_path(course) %></li>
        <% end %>
    <% end %>
    <% if current_user.people_followed.count > 0 %>
        <li><%= link_to "Courses I Follow", followed_courses_user_path(current_user) %></li>
    <% end %>
    <li class="divider"></li>
    <li><%= link_to "Add a Course", new_course_path %></li>
  </ul>
</li>