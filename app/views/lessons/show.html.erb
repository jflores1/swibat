<div class="span2">
  <%= generate_vote_form @lesson, vote_lesson_path(@lesson) %>
  <%= render :partial => 'flags/flag', :locals => {:resource => @lesson} if can? :flag, Flag %>
  <div class="favoritecount">
    <b></b>
  </div>
</div>
<div class="span10" id="course-summary">

  <header class="course-header top-margin">
    <div class="span12">
      <h2><%= link_to "#{@unit.unit_title}:", course_unit_path(@course, @unit), class:"disguised-header-link" %><br/>
        <%= @lesson.lesson_title %></h2>
    </div>
  </header>

  <section class="course-info">
    <header>
      <h2>Prior Knowledge <%= link_to "(edit lesson)", edit_unit_lesson_path(@unit, @lesson) if can? :update, @lesson %></h2>
    </header>
    <article>
      <p><%= @lesson.prior_knowledge %></p>
    </article>
  </section>

  <section class="course-info">
    <header>
      <h2>Lesson <%= "Objective".pluralize(@lesson.objectives.count) %></h2>
    </header>
    <article>
      <% if @lesson.objectives.count == 0 %>
        <p>No objectives? Boo. <%= link_to "Add some.", edit_unit_lesson_path(@unit, @lesson) if can? :update, @lesson %></p>
      <% else %>
          <ul>
            <% @lesson.objectives.each do |objective| %>
                <li><%= objective.objective %></li>
            <% end %>
          </ul>
      <% end %>

    </article>
  </section>

  <section class="course-info">
    <header>
      <h2>Lesson <%= "Assessment".pluralize(@lesson.assessments.count) %></h2>
    </header>
    <article>
      <% if @lesson.assessments.count == 0 %>
          <p>No assessments? For shame. <%= link_to "Add an assessment.", edit_unit_lesson_path(@unit, @lesson) if can? :update, @lesson %></p>
      <% else %>
          <ul>
            <% @lesson.assessments.each do |assessment| %>
                <li><%= assessment.assessment_name %></li>
            <% end %>
          </ul>
      <% end %>

    </article>
  </section>

  <section class="course-info">
    <header>
      <h2>Lesson <%= "Resource".pluralize(@lesson.resources.count) %></h2>
    </header>
    <article>
      <% if @lesson.resources.count == 0 %>
          <p>The only resource needed here is awesome teaching. <%= link_to "Add a resource.", edit_unit_lesson_path(@unit, @lesson) if can? :update, @lesson %></p>
      <% else %>
          <ul>
            <% @lesson.resources.each do |resource| %>
                <li><%= resource.name %></li>
            <% end %>
          </ul>
      <% end %>

    </article>
  </section>

  <section class="course-info">
    <header>
      <h2>Standards Covered</h2>
    </header>
    <article>
    </article>
  </section>

  <header class="course-header">
    <h2>Lesson Activities</h2>
    <% if can? :update, @lesson %>
        <button class="btn btn-small btn-monkey pull-right"><a id="add-lesson" href="<%= new_unit_lesson_path(@unit) %>"><i class="icon-plus icon-white"></i></a></button>
    <% end %>
  </header>
  <section class="course-info">
    <div id="activities">
      <% if @lesson.activities.count == 0 %>
        <p>No activities planned for this lesson? Hmm... <%= link_to "Add some stuff to do", edit_unit_lesson_path(@unit, @lesson) if can? :update, @lesson %></p>
      <% else %>
          <table>
            <thead>
            <tr>
              <th>Activity</th>
              <th>Duration</th>
              <th>Active Person</th>
            </tr>
            </thead>
            <tbody>
            <% @lesson.activities.each do |activity| %>
                <tr>
                  <td><%= activity.activity %></td>
                  <td><%= activity.duration %></td>
                  <td><%= activity.agent %></td>
                </tr>
            <% end %>
            </tbody>
          </table>
      <% end %>

    </div>

  </section>

  <header class="course-header">
    <h2>Comments</h2>
  </header>
  <section class="course-info">
    <%= render :partial => 'comments/comments', :locals => {:commentable => @course} %>
  </section>

</div>

<% content_for :sidebar do %>
    <%= content_for :sidebar_profile do %>
        <%= render 'shared/sidebar_profile' %>
    <% end %>

    <%= content_for :sidebar_invite do %>
        <%= render 'shared/sidebar_invite' %>
    <% end %>

    <%= content_for :sidebar_other_unit_lessons do %>
        <%= render 'shared/sidebar_other_unit_lessons' %>
    <% end %>

    <%= render 'layouts/application_sidebar' %>

<% end %>




