<div class="">

  <header class="course-header">
    <h2>Start Sharing Awesome Curriculum (for free)!</h2>
  </header>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <%= f.label :full_name, "Your Real Name" %>
      <%= f.text_field :full_name %>

      <%= f.label :email, "Email (will be used to log in)" %>
      <%= f.text_field :email %>


      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>

      <%= f.hidden_field :role, value: "teacher" %>
      <%= f.submit "Sign Up!", class:"btn btn-monkey" %>

  <% end %>

  <div class="course-form-links">
    <%= render "devise/shared/links" %>
  </div>

</div>

