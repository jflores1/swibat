<div class="new-user-engagement-form">

  <header>
    <h2>Start Coaching Teachers Today (it's free)!</h2>
  </header>

  <div class="centered-form">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <%= f.label :full_name, "Your Name" %>
        <%= f.text_field :full_name %>

        <%= f.label :email, "Email (will be used to log in)" %>
        <%= f.text_field :email %>


        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>

        <%= f.hidden_field :role, value: "school_admin" %>
        <%= f.submit "Sign Up!", class:"btn btn-warning btn-large" %>

        <%= render "devise/shared/links" %>
    <% end %> 
  </div>
</div>


