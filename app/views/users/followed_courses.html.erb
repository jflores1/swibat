<% @courses.each do |course| %>
    <div class="followed-course span6">
      <h3><%= link_to "#{course.course_name}", course_path(course) %></h3>
      <p><%= course.course_summary %></p>
      <%= link_to image_tag(course.user.image.url) %>
      <p><%= link_to "#{course.user.full_name}", user_path(course.user) %></p>
    </div>
<% end %>