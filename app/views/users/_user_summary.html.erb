<div class="course-overview" xmlns="http://www.w3.org/1999/html">
  <header class="course-header">
    <h3><%= @user.courses.count %> Courses </h3>
    <% if current_user? %>
        <a class="btn btn-monkey pull-right" href="<%= new_user_course_path(current_user) %>"><i class="icon-plus icon-white"></i></a>
    <% end %>
  </header>

  <div class="accordion">
    <% @user.courses.each do |course| %>
    <div class="accordion-group">
      <div class="accordion-heading">
        <a class="accordion-toggle" data-toggle="collapse" href="#collapse_<%= course.id  %>"><%= course.course_name %> (<%= pluralize((course.units.count), 'unit') %>) </a>
            <% if current_user? %>
            <a class="btn btn-mini btn-monkey pull-right"><i class="icon-trash icon-white"></i></a>
            <a class="btn btn-mini btn-monkey pull-right" href="<%= edit_user_course_path(current_user, course) %>"><i class="icon-pencil icon-white"></i></a>
            <% end %>
      </div>
      <div id="collapse_<%= course.id %>" class="accordion-body collapse">
      <% course.units.each do |unit| %>      
        <div class="accordion-inner">
          <%= unit.unit_title %>
        </div>      
      <% end %>
      </div>
    </div>
    <% end %>
  </div>
</div>

<div class="course-overview">
  <header class="course-header">
    <h3>Questions</h3>
  </header>
</div>

<div class="course-overview">
  <header class="course-header">
    <h3>Answers</h3>
  </header>
</div>

<div class="course-overview">
  <header class="course-header">
    <h3>Profile</h3>
  </header>

  <% if @user.professional_educations.any? %>
      <dt>Education:</dt>
      <dd>
        <% @user.professional_educations.each do |education| %>
            <div class="well">
              <dl class="dl-horizontal">
                <dt>School:</dt>
                <dd><%= education.school_name %></dd>
                <% if education.degree %>
                    <dt>Degree:</dt>
                    <dd><%= education.degree %></dd>
                <% end %>
                <% if education.field_of_study %>
                    <dt>Fields of Study:</dt>
                    <dd><%= education.field_of_study %></dd>
                <% end %>
                <% if education.enroll_date || education.graduation_date %>
                    <dt>Period:</dt>
                    <dd><%= education.enroll_date if education.enroll_date %> - <%= education.graduation_date if education.graduation_date %> </dd>
                <% end %>
              </dl>
            </div>
        <% end %>
      </dd>
  <% end %>

  <% if @certifications.any? %>
      <dt>Certifications:</dt>
      <dd>
        <% @certifications.each do |cert| %>
            <%= cert.name %> <%= "(" + cert.year.to_s + ")" if cert.year %>
        <% end %>
      </dd>
  <% end %>

  <% if @awards.any? %>
      <dt>Awards:</dt>
      <dd>
        <% @awards.each do |award| %>
            <%= award.name %> <%= "(" + award.year.to_s + ")" if award.year %>
        <% end %>
      </dd>
  <% end %>


</div>

