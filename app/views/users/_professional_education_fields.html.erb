	<%= f.label :school_name, "School Name" %>
	<%= f.text_field :school_name %>

	<%= f.label :degree, "Degree(s) Awarded" %>
	<%= f.text_field :degree %>

	<%= f.label :field_of_study, "What did you study?" %>
