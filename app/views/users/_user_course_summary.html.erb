<div class="course-organizer">
  <div class="box-row">
    <div class="span12 no-left-margin box-bottom-margin">
      <div class="span6 box height5">
        <h3><%= pluralize(@user.courses.count, "Course") %></h3>
        <ul class="course-list">
          <% @user.courses.each do |course| %>
            <li><%= link_to "#{course.course_name}", course_path(course) %></li>
          <% end %>
        </ul>
      </div>

      <div class="span6 box height5">
        <h3>Following</h3>
        <% @user.people_followed.each do |user| %>
          <%= link_to image_tag(user.image.url), user_path(user), class:"box-profile-pic" %>
        <% end %>
      </div>

    </div>
  </div>
</div>