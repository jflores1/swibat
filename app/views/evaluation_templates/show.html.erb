<h1>Managing Evaluation Template</h1>
<%= form_for [@institution, @template] do |f| %>
	<div class="btn-group pull-right">
		<%= f.submit "Save", class:"btn btn-monkey btn-large" %>
	</div>
	<div class="control-group">
		<%= f.label :template_name %>
		<%= f.text_field :name %>
	</div>
	
	<div class="control-group ">		
		<%= f.check_box :published, class: "pull-left" %> <%= f.label :published, "&nbsp Published".html_safe %>
	</div>	
<% end %>

<h2>Domains and Criteria</h2>
<div class="eval-criteria">
	<div class="course-organizer">
		<span>Last updated <%= time_ago_in_words(@template.updated_at) %> ago</span>

		<div class="box-row" id="evaluation-domains">
			<% @template.evaluation_domains.each do |domain| %>
				<%= render :partial => "evaluation_domains/evaluation_domain", locals: {domain: domain} %>
			<% end %>
		</div>
		<p><%= link_to "Add Domain", new_institution_evaluation_template_evaluation_domain_path(@institution, @template), class:"btn btn-monkey", remote: true %></p>
		<div id="domain-form" style="display: none;"></div>
		
	</div>
</div>
