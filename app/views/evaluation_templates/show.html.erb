<% content_for :left_column do %>
	<h1 class="page-title">
		<%= @template.name %>
		<span class="pull-right">
			<%= link_to "<i class='icon-trash no-left-margin'></i> Delete Template".html_safe, [@institution, @template], method: :delete, :confirm => 'Are you sure? This action will delete the template.', class:"btn btn-danger" %>
		</span>
	</h1>

	<div class="domain">
		<%= form_for [@institution, @template], html: {class: 'form-horizontal'} do |f| %>			
			<div class="control-group">
				<%= f.label :template_name, "Template Name: ", class: 'control-label prominent' %>
				<div class="controls">
					<%= f.text_field :name, class:"input-xxlarge" %>
				</div>
			</div>
			<div class="control-group ">
				<div class="controls">	
					<label class="checkbox">
			      <%= f.check_box :published %> Published
			    </label>
		    </div>
			</div>				
			<%= f.submit "Save Template", class:"btn btn-warning" %>
		<% end %>

		<div class="eval-criteria">
			<span>Last updated <%= time_ago_in_words(@template.updated_at) %> ago</span>
			<div id="evaluation-domains">
				<% @template.evaluation_domains.each do |domain| %>
					<%= render :partial => "evaluation_domains/evaluation_domain", locals: {domain: domain} %>
				<% end %>
			</div>
			<p><%= link_to "Add Domain", new_institution_evaluation_template_evaluation_domain_path(@institution, @template), class:"btn", remote: true %></p>
			<div id="domain-form" style="display: none;"></div>
		</div>
	</div>
<% end %>

<% content_for :right_column do %>
	
<% end %>