<% content_for :left_column do %>
	<%= render partial: 'users/admin_sidebar_menu', locals: {user: current_user} %>
<% end %>

<% content_for :right_column do %>
	<h1 class="page-title">
		<i class="icon-laptop"></i> Evaluation Template
	</h1>

	<%= form_for [@institution, @template] do |f| %>
		<div class="pull-right">
			<%= f.submit "Save Template", class:"btn btn-monkey" %>
			<%= link_to "<i class='icon-trash no-left-margin'></i> Delete Template".html_safe, [@institution, @template], method: :delete, :confirm => 'Are you sure? This action will delete the template.', class:"btn btn-monkey" %>
		</div>
		<div class="control-group">
			<%= f.label :template_name %>
			<%= f.text_field :name, class:"span9 top-margin" %>
		</div>
		
		<div class="control-group ">		
			<%= f.check_box :published, class: "pull-left" %> <%= f.label :published, "&nbsp Publish".html_safe %>
		</div>	
	<% end %>
	<div class="eval-criteria">

			<span>Last updated <%= time_ago_in_words(@template.updated_at) %> ago</span>

			<div id="evaluation-domains">
				<% @template.evaluation_domains.each do |domain| %>
					<%= render :partial => "evaluation_domains/evaluation_domain", locals: {domain: domain} %>
				<% end %>
			</div>
			<p><%= link_to "Add Domain", new_institution_evaluation_template_evaluation_domain_path(@institution, @template), class:"btn btn-monkey", remote: true %></p>
			<div id="domain-form" style="display: none;"></div>
			

	</div>
<% end %>