<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

    <%= render 'shared/form_error_messages', object: f.object %>

    <div class="row-fluid">
        <div class="span5">
          <%= f.text_field :first_name, placeholder:"First Name", class:"span12"%>
        </div>

        <div class="span6">
          <%= f.text_field :last_name, placeholder:"Last Name", class:"span10"%>
        </div>
    </div>

    <div class="row-fluid">
      <div class="span10">
        <%= f.text_field :institution, placeholder:"School",class:"span12" %>

        <%= f.text_field :email, placeholder:"Email Address (will be used to log in)",class:"span12" %>
      </div>
    </div>

    <div class="row-fluid">
      <div class="span5">
        <%= f.password_field :password, placeholder:"Password", class:"span12" %>

      </div>
      <div class="span6">
        <%= f.password_field :password_confirmation, placeholder:"Confirm", class:"span10" %>
      </div>
    </div>

    <%= f.hidden_field :role, value: "teacher" %>

    <div class="row-fluid">
      <div class="span5">
        <%= f.submit "Sign Up!", class:"btn static-sign-up-btn span12" %>
      </div>
    </div>

<% end %>