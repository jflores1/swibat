<div class="chalkboard-form">
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <%= f.label :full_name, "Your Real Name" %>
      <%= f.text_field :full_name, class: "span8" %>

      <%= f.label :email, "Email (will be used to log in)" %>
      <%= f.text_field :email, class:"span8" %>


      <%= f.label :password %>
      <%= f.text_field :password, class:"span8" %>

      <%= f.label :password_confirmation, "Confirm" %>
      <%= f.text_field :password_confirmation, class:"span8" %>

      <%= f.hidden_field :role, value: "teacher" %>
      <%= f.submit "Sign up!", class:"btn primary-cta-btn" %>


  <% end %>
  <p>(it's free and always will be!)</p>

</div>

