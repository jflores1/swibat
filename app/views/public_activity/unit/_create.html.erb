<div class="activity-owner-image">
	<%= link_to image_tag(activity.owner.image.url(:x50)), activity.owner %> 
</div>
<div class="activity">		
	<div class="activity-header">
		<%= link_to activity.owner.full_name, activity.owner %> added a new unit to the course
		<%= link_to activity.recipient.course.course_name, activity.recipient.course %>
	</div>
	<div class="activity-content">		
		<h4><%= link_to activity.recipient.unit_title, [activity.recipient.course, activity.recipient] %></h4>		
		<p>
			Starts: <%= normal_date_format activity.recipient.expected_start_date %><br />
			Ends: <%= normal_date_format activity.recipient.expected_end_date %>
		</p>
	</div>
	<div class="activity-footer">
		<%= time_ago_in_words activity.created_at %> ago
	</div>
</div>
