<% provide(:title, "#{@course.course_name.titleize}") %>
<div class="span12" id="course-summary">

  <header class="course-header top-margin">
    <div class="span12">
      <h2 class="breadcrumb-header"><%= @course.course_name.titleize %></h2>
    </div>
    <div class="span12 no-left-margin">
      <h2 class="breadcrumb-header"><%= @course.grade.grade_level %>, <%= @course.course_semester %> <%= @course.course_year %></h2>
    </div>
  </header>

  <section class="course-info">
    <header>
      <h2>
        Course Summary
        <%= link_to '<i class="icon-pencil"></i>'.html_safe, edit_course_path(@course), class:"header-edit" if can? :edit, @course %>
        <a class="get-syllabus" href="<%= syllabus_course_path(@course) %>"><i class="icon-book"></i></a>
      </h2>
    </header>
    <article>
      <p><%= @course.course_summary %></p>
    </article>
  </section>

  <section class="course-info">
    <header>
      <h2>Course Objectives</h2>
    </header>
    <article>
      <ul>
        <% @course.objectives.each do |objective| %>
            <li><%= objective.objective.humanize %></li>
        <% end %>
      </ul>
    </article>
  </section>

  <section class="course-info">
    <header>
      <h2>Tags</h2>
    </header>
    <p><%= raw @course.tag_list.map {|t| link_to t, tag_courses_path(t), class:"tag_link"}.join(" ") %></p>
  </section>

  <header class="course-header">
    <h2>Units</h2>
    <% if can? :edit, @course %>
        <a id="course-add-unit" href="<%= new_course_unit_path(@course) %>"><i class="title-icon icon-plus"></i></a>
    <% end %>
  </header>
  <section class="course-info">
    <% if current_user? && @course.units.count == 0 %>
          <p class="top-margin">It doesn't look like you have any units. <%= link_to "Create one now.", new_course_unit_path(@course) if can? :edit, @course %></p>
    <% elsif @course.units.count == 0%>
          <p class="top-margin">Sad. It doesn't look like this user has created any courses yet.</p>
    <% else %>
        <%= render 'units_lessons_accordion' %>
    <% end %>
  </section>

  <header class="course-header">
    <h2>Comments</h2>
  </header>
  <section class="course-info">
    <%= render :partial => 'comments/comments', :locals => {:commentable => @course} %>
  </section>

</div>

<% content_for :sidebar do %>

    <%= content_for :sidebar_profile do %>
      <%= render 'shared/sidebar_profile' %>
    <% end %>

    <%= content_for :sidebar_invite do %>
      <%= render 'shared/sidebar_invite' %>
    <% end %>

    <%= content_for :sidebar_other_user_courses do %>
      <%= render 'shared/sidebar_other_user_courses' %>
    <% end %>

    <%= content_for :sidebar_related_courses do %>
      <%= render 'shared/sidebar_related_courses' %>
    <% end %>  

    <%= render 'layouts/application_sidebar' %>

    <div class="sidebar">
      <header class="course-header">
        <h4>Fork this course!</h4>
      </header>
      <section>
        <p>Copy this course along with all its units and lessons into your own courses collection</p>
        <%= link_to "Fork Course", fork_course_path(@course), method: "post", class: "btn btn-monkey" %>
      </section>
    </div>
<% end %>



