.btn-monkey {
    background-color: rgb(221, 98, 75);
    background-image: -moz-linear-gradient(top, rgb(221, 98, 75), rgb(164, 50, 32));
    background-image: -ms-linear-gradient(top, rgb(221, 98, 75), rgb(164, 50, 32));
    background-image: -webkit-gradient(linear, 0 0, 0 100%, from(rgb(221, 98, 75)), to(rgb(164, 50, 32)));
    background-image: -webkit-linear-gradient(top, rgb(221, 98, 75), rgb(164, 50, 32));
    background-image: -o-linear-gradient(top, rgb(221, 98, 75), rgb(164, 50, 32));
    background-image: linear-gradient(top, rgb(221, 98, 75), rgb(164, 50, 32));
    background-repeat: repeat-x;
    filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#FFDD624B', endColorstr='#FFA43220', GradientType=0);
    border-color: rgb(164, 50, 32) rgb(164, 50, 32) #B13623;
    border-color: rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.1) fadein(rgba(0, 0, 0, 0.1), 15%);
    *background-color: rgb(164, 50, 32);
    filter: progid:DXImageTransform.Microsoft.gradient(enabled = false);
}

.btn-monkey:hover, .btn-monkey:active, .btn-monkey.active, .btn-monkey.disabled, .btn-monkey[disabled]{
    background: #EF492F;
    background: #B13623;
}

.btn-monkey, .btn-monkey:hover{
    color: white;
    text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.25);
}

.btn-monkey.active{
    color: rgba(255, 255, 255, 0.75);
}

