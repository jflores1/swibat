@import "bootstrap";
body {
  //padding-top: 60px;
  background: url("<%= asset_path('bg-patterned.jpg') %>");
}
@import "bootstrap-responsive";
@import url(http://fonts.googleapis.com/css?family=Permanent+Marker);
//call the font family: font-family: 'Permanent Marker', cursive;
//gray - rgba(96, 110, 103, 1)
@import url(http://fonts.googleapis.com/css?family=Open+Sans+Condensed:700);
@import url(http://fonts.googleapis.com/css?family=Open+Sans:300,400,700);

//universal and refactored CSS - The CSS here is shared across controllers.
.hero {
    clear:both;
    margin-bottom:55px;
}

.navbar-inner{
  background-color: #e7e7e7;
  background-image: -webkit-linear-gradient(top, #a3db5b, #4c9304);
}

.navbar .brand {
  color:rgba(255,255,255, 1);
  font-family: 'Permanent Marker', cursive, "Helvetica Neue", sans-serif;
  font-size: 3.75em; /*60px / 16px - containing element is .logo p */
  clear:right;
}

.navbar .nav > li > a {
  color:#FFFFFF;
  font-size: 1.23076923em; /*16px /13 */
}

.navbar .nav > li > a:hover {
  background-color: rgba(234, 231, 216, 1);
  -moz-border-radius: 4px;
  -webkit-border-radius: 4px;
  border-radius: 4px;
  color: rgba(96, 110, 103, 1);
  text-shadow: 1px 1px #FFFFFF;
}

.no-decor{
  color:#000;
}

div.prettyprint{
  background-color:#f7f7f9;
  border: 1px solid #e1e1e8;
  padding: 5px;
  border-radius: 3px 3px 0px 0px;
}

.bordered {
  border: 1px #e7e7e7 solid;
  border-radius: 3px;
  padding: 10px;
  margin-bottom:10px;

  .header-link{
    color:#4c9304;
  }

  p.top {
    margin-top: 10px;
    font-size: 1.23076923em; /*16px /13 */
  }

  strong.verb{
    color:#ff0000;
  }

}

div.inner{
    max-width: 127.659574%; /*1200/940*/
    margin: 0 auto;
    padding: 0 4.166667%;
}



//Formatting and Fonts
.highlight {
    background: #f7f7f9;
}

.header-green{
    color:#4c9304;
}

.top-padded {
    padding-top:10px;
}

.strong {
    font-weight: bold;
}

/*******************************************
Media Queries
*******************************************/

/* Large Desktop */
@media (min-width: 1200px) {

    section.chalkboard {
        header.hero-header {
            h2 {
                line-height: 2.1;
            }
        }
    }

}

/*Portrait tablet to landscape and desktop */
@media (min-width: 768px) and (max-width: 979px) {

    .navbar-chalkboard{

        .logo {
            width: 30%;
        }

        .navdiv {
            z-index: 10;
        }

        .navdiv .nav > li > a {
            font-size: 1em; /*16px /13 */
        }
    }

}

/*Landscape phone to portrait tablet */
@media (max-width: 767px) {

    section.chalkboard {
        header.hero-header {
            h1 {
                font-size: 1.8em;

            }
            h2 {
                font-size: 1.5em;
                line-height: 1.2;
                margin-bottom: 5px;
                margin-top: 5px;
            }

            .primary-cta-btn {
                padding: 0.5em;
            }
        }
    }

    .screenshot {
        width: 100%;
        float: none;

    }

    .feature-paragraph {
        width: 100%;
        float: none;
        margin-top: 10px;

    }

}

/* Landscape phone and down */
@media (max-width: 480px) {

    section.chalkboard {
        background: #616e68;
        border-top: 2px solid #ffc878;
        border-bottom: 2px solid #ffc878;
        height: 100%;

        header.hero-header {

            position: relative;
            top: 10.005em;

            h1 {
                font-size: 2em;
                line-height: 1.2;

            }

            h2 {
                font-size: 1em;
                line-height: 1;
                margin-bottom: 5px;
                margin-top: 5px;
            }
        }
    }

}
