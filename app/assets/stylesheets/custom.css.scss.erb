/********************************
Variables
********************************/
//Fonts
$header-gradient-dark-color: #2B2F3A;
$header-gradient-light-color: #50596D;

//Padding and Such
$page-width: 980px;

/********************************
Body CSS
********************************/
body.padded {
    padding-top: 60px;
}

body.patterned {
    background: url("<%= asset_path('bg-patterned.jpg') %>");
}

.hero {
    clear:both;
    margin-bottom:55px;
}

/********************************
Sidebar
********************************/
div.sidebar{

    a{
        display: block;
        width:100%;
        float:left;
        margin-top: 3px;
        text-decoration: none;
        color: #50596D;
    }

    a:hover{
        color: rgb(164, 50, 32);

    }
}

/*******************************
Navbar Modifications
********************************/
.navbar-inner{
  background-color: #e7e7e7;
  background-image: -webkit-linear-gradient(top, #5f6e68, #606E67);
  //background-image: -webkit-linear-gradient(top, #50596D, #2B2F3A );

    .fixed-header-logo {
        width: 45%;
        padding-top: 10px;
        padding-left: 15px;
        float: left;
    }

    .fixed-header-nav {
        width: 50%;
        float: right;

        .nav li a {
            font-size: 1em;
        }
    }

}

header.navbar {

    .brand {
        color:rgba(255,255,255, 1);
        font-family: 'Permanent Marker', cursive, "Helvetica Neue", sans-serif;
        font-size: 3.75em; /*60px / 16px - containing element is .logo p */
        clear:right;
    }

    .application-header-brand {
        //color:$header-gradient-dark-color;
        color: rgb(164, 50, 32);
        font-family: 'Permanent Marker', cursive, "Helvetica Neue", sans-serif;
        font-size: 2.5em; /*26px / 13px*/
        text-decoration:none;
    }

    nav.application-nav {
        .nav > li > a{
            $text-and-border: #ffffff;
            background: rgba(80, 89, 109, 0.9); //rgba(152, 161, 186, 0.1);
            font-size: 1.23076923em;//16px:13px
            padding: 5px;
            //background: rgb(221, 98, 75);
            color: $text-and-border;
            margin: 0px 3px 5px 3px;
            border:solid 1px $text-and-border;
            text-shadow: none;

            //background-image: -webkit-linear-gradient(top, rgb(221, 98, 75), rgb(164, 50, 32));
            /*background-image: -moz-linear-gradient(top, rgb(221, 98, 75), rgb(164, 50, 32));*/
            /*background-image: -ms-linear-gradient(top, rgb(221, 98, 75), rgb(164, 50, 32));*/
            /*background-image: linear-gradient(top, rgb(221, 98, 75), rgb(164, 50, 32));*/

            -moz-border-radius: 0px;//4px;
            -webkit-border-radius: 0px;  //4px;
            border-radius: 0px; //4px;

            /*border-bottom: 1px solid rgb(164, 50, 32);*/
            /*border-left: 1px solid rgb(164, 50, 32);*/
            /*border-right: 1px solid rgb(164, 50, 32);*/
            /*border-top: 1px solid rgb(164, 50, 32);*/
        }

        .nav >li > a:hover {
            color: $header-gradient-dark-color;
            background: rgba(234, 231, 216, 1);
        }
    }

    nav.navmenu-chalkboard {
        .nav > li > a {
            color:#FFFFFF;
            font-size: 1.23076923em; /*16px /13*/
        }

        .nav > li > a:hover {
            background-color: rgba(234, 231, 216, 1);
            -moz-border-radius: 4px;
            -webkit-border-radius: 4px;
            border-radius: 4px;
            color: $header-gradient-dark-color;
            text-shadow: 1px 1px #FFFFFF;
        }

    }

}

