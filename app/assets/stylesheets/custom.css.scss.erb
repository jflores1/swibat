//universal and refactored CSS - The CSS here is shared across controllers.

body.padded {
    padding-top: 60px;
}

body.patterned {
    background: url("<%= asset_path('bg-patterned.jpg') %>");
}

.hero {
    clear:both;
    margin-bottom:55px;
}

.navbar-inner{
  background-color: #e7e7e7;
  background-image: -webkit-linear-gradient(top, #5f6e68, #606E67);

    .fixed-header-logo {
        width: 45%;
        padding-top: 10px;
        padding-left: 15px;
        float: left;
    }

    .fixed-header-nav {
        width: 50%;
        float: right;

        .nav li a {
            font-size: 1em;
        }
    }

}

.navbar .brand {
  color:rgba(255,255,255, 1);
  font-family: 'Permanent Marker', cursive, "Helvetica Neue", sans-serif;
  font-size: 3.75em; /*60px / 16px - containing element is .logo p */
  clear:right;
}

.navbar .nav > li > a {
  color:#FFFFFF;
  font-size: 1.23076923em; /*16px /13 */
}

.navbar .nav > li > a:hover {
  background-color: rgba(234, 231, 216, 1);
  -moz-border-radius: 4px;
  -webkit-border-radius: 4px;
  border-radius: 4px;
  color: rgba(96, 110, 103, 1);
  text-shadow: 1px 1px #FFFFFF;
}

.no-decor{
  color:#000;
}

div.prettyprint{
  //background-color:#f7f7f9;
  background-color:#ffffff;
  //background-color:  rgba(231, 231, 231, 0.5);
  //background-color: rgba(234, 231, 216, 0.1);
  border: 1px solid #e1e1e8;
  padding: 5px;
  border-radius: 3px 3px 0px 0px;
  -moz-box-shadow: 2px 0px 5px rgba(96, 110, 103, 1);
  box-shadow: 0px 1px 2px rgba(96, 110, 103, 0.75);
}

.bordered {
  border: 1px #e7e7e7 solid;
  border-radius: 3px;
  padding: 10px;
  margin-bottom:10px;

  .header-link{
    color:#4c9304;
  }

  p.top {
    margin-top: 10px;
    font-size: 1.23076923em; /*16px /13 */
  }

  strong.verb{
    color:#ff0000;
  }

}

div.inner{
    max-width: 127.659574%; /*1200/940*/
    margin: 0 auto;
    padding: 0 4.166667%;
}



//Formatting and Fonts
.highlight {
    background: #f7f7f9;
}

.header-green{
    color:#4c9304;
}

.top-padded {
    padding-top:10px;
}

.strong {
    font-weight: bold;
}

/*******************************************
Media Queries
*******************************************/

/* Large Desktop */
@media screen and (min-width: 1200px) {

    section.chalkboard {
        header.hero-header {
            h2 {
                line-height: 2.1;
                margin-bottom: 25px !important;
            }
        }
    }

    section.leader-content, .section-content {
        .feature-paragraph {
            p.intro-paragraph {
                margin-top: 1em !important;
                font-size: 2.3em !important;
            }
        }
    }

    .primary-cta-btn {
        padding: 1em;
    }

}

/*Portrait tablet to landscape and desktop */
@media screen and (min-width: 769px) and (max-width: 979px) {

    .navbar-chalkboard{

        .logo {
            width: 30%;
        }

        .navdiv {
            z-index: 10;
        }

        .navdiv .nav > li > a {
            font-size: 1em; /*16px /13 */
        }
    }

}

/*Landscape phone to portrait tablet */
@media screen and (max-width: 768px) {

    section.chalkboard {
        header.hero-header {
            h1 {
                font-size: 2.5em !important;

            }
            h2 {
                font-size: 1.3em !important;
                line-height: 1.2;
                margin-bottom: 10px;
                margin-top: 5px;
            }

            .primary-cta-btn {
                padding: 0.5em;
            }
        }
    }

    .screenshot, .screenshot-right {
        width: 100% !important;
        float: none !important;

        img.feature-image {
            width: 100% !important;
            margin-left: 0px !important;
        }

    }

    .feature-paragraph, .feature-paragraph-left {
        width: 100% !important;
        float: none !important;
        margin-top: 10px;

    }

}

/* Landscape phone */
@media screen and (max-width: 480px) {

    .hero {
        margin-bottom:0px !important;
    }

    .navbar .brand {
        font-size: 2.5em !important;
    }

    .navbar-chalkboard{
        margin-top:20px !important;

        .logo {
            width: 80%;

            p{
                float:left;
                font-size: 1em; /*13px /13 */
                clear:left;
            }

        }

        .navdiv {
            float: right;
        }

    }

    section.chalkboard {
        background: #616e68 !important;
        border-top: 10px solid #ffc878 !important;
        border-bottom: 10px solid #ffc878 !important;
        min-height: 300px;

        header.hero-header {

            position: relative;
            top: 9.75em !important;

            h1 {
                font-size: 2em !important;
                line-height: 1.2;

            }

            h2 {
                font-size: 1em;
                line-height: 1;
                margin-bottom: 5px;
                margin-top: 5px;
            }
        }

    }

    .leader-div {
        margin-top: 295px !important;
    }

    section.leader-content, .section-content {
        header.intro-content {
            h1 {
                font-size: 3em !important;
            }
        }
    }


}

/* Portrait phone */
@media screen and (max-width: 320px) {

    section.chalkboard {
        min-height: 460px;

        header.hero-header {
            h1 {
                margin: 20px 0px 20px 0px !important;

            }
            h2 {
                margin: 20px 0px 20px 0px !important;
            }
        }
    }

    .leader-div {
        margin-top: 435px !important;
    }


}

