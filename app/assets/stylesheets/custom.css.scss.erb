@import "bootstrap";
body {
  //padding-top: 60px;
  background: url("<%= asset_path('bg-patterned.jpg') %>");
}
@import "bootstrap-responsive";
@import url(http://fonts.googleapis.com/css?family=Permanent+Marker);
//call the font family: font-family: 'Permanent Marker', cursive;
//gray - rgba(96, 110, 103, 1)
@import url(http://fonts.googleapis.com/css?family=Open+Sans+Condensed:700);
@import url(http://fonts.googleapis.com/css?family=Open+Sans:300,400,700);

//universal and refactored CSS - The CSS here is shared across controllers.
.hero {
    clear:both;
    margin-bottom:55px;
}

.logo {
    color: #FFFFFF;

    p{
        float:left;
        font-size: 1.23076923em; /*16px /13 */
    }
}

.navbar-inner{
  background-color: #e7e7e7;
  background-image: -webkit-linear-gradient(top, #a3db5b, #4c9304);
}

.navbar .brand {
  color:rgba(255,255,255, 1);
  font-family: 'Permanent Marker', cursive, "Helvetica Neue", sans-serif;
  font-size: 3.75em; /*60px / 16px - containing element is .logo p */
}

.navbar .nav > li > a {
  color:#FFFFFF;
    font-size: 1.23076923em; /*16px /13 */
}

.navbar .nav > li > a:hover{
  background-color: rgba(234, 231, 216, 1);
  -moz-border-radius: 4px;
  -webkit-border-radius: 4px;
  border-radius: 4px;
  color: rgba(96, 110, 103, 1);
  text-shadow: 1px 1px #FFFFFF;
}

.no-decor{
  color:#000;
}

div.prettyprint{
  background-color:#f7f7f9;
  border: 1px solid #e1e1e8;
  padding: 5px;
  border-radius: 3px 3px 0px 0px;
}

.bordered {
  border: 1px #e7e7e7 solid;
  border-radius: 3px;
  padding: 10px;
  margin-bottom:10px;

  .header-link{
    color:#4c9304;
  }

  p.top {
    margin-top: 10px;
    font-size: 1.23076923em; /*16px /13 */
  }

  strong.verb{
    color:#ff0000;
  }

}

div.inner{
    max-width: 127.659574%; /*1200/940*/
    margin: 0 auto;
    padding: 0 4.166667%;
}



//Formatting and Fonts
.highlight {
    background: #f7f7f9;
}

.header-green{
    color:#4c9304;
}

.top-padded {
    padding-top:10px;
}

.strong {
    font-weight: bold;
}