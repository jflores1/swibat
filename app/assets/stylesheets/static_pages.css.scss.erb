.navbar-chalkboard{
    background: transparent;
    margin-top:30px;
    -moz-box-shadow: none;
    box-shadow: none;
}

.navmenu-chalkboard{
    margin-top: 20px;
}

section.chalkboard{
    background: url(<%= asset_path("bg-chalkboard.png") %>) top center repeat-x;
    width:100%;
    height:100%;
    position:fixed;
    right:0;
    top:0;
    z-index: -1;

    h1, h2{
        color:#FFFFFF;
    }
}