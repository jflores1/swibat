//Fonts
$permanent-marker: 'Permanent Marker', cursive;

body.plain-bg{
  padding-top: 40px;
}

.navbar .menu {
  color:rgba(255,255,255, 1);
  font-family: $permanent-marker;
  font-size: 36px;
  text-decoration: none;

}

table.development-table{

  margin: 20px 0px 20px 0px;

  th {
    text-align:center;
    width: 15%;
  }

  .light-right-padded {
    padding-left: 20px;
  }

  i{
    margin: 3px;
  }
}

div.eval-criteria{
  h3{
    font-size: 1.8em;
    padding-bottom: 0.5em;
  }
  h4{
    font-size: 1.3em;
    margin-left: 1em;
  }

  .delete-domain{
    float: right;
  }

  .btn-group{
    float: right;
    clear: left;
    margin-top: 1em;
  }

}
